# Exchange Configuration
EXCHANGE=binance  # binance, bybit, etc.
TESTNET=true  # Set to false for mainnet

# API Keys (will be provided later)
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here

# Trading Configuration
SYMBOL=BTC/USDT
TIMEFRAME=15m  # 1m, 5m, 15m, 1h, 4h, 1d

# Risk Management
RISK_PER_TRADE=0.01  # 1% of account per trade
MAX_POSITION_SIZE=0.1  # Maximum 10% of account in single position
STOP_LOSS_PERCENT=0.02  # 2% stop loss
TAKE_PROFIT_PERCENT=0.04  # 4% take profit (2:1 risk/reward)

# Strategy Parameters
EMA_FAST=9
EMA_SLOW=21
RSI_PERIOD=14
RSI_OVERBOUGHT=70
RSI_OVERSOLD=30

# Execution
DRY_RUN=true  # Set to false to execute real trades
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

